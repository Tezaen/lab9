		<form action='/authorfull' method='GET'>
			<div class='form-group row'>
				<label for='firstname' class='col-sm-4 col-form-label'>First Name</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='firstname' name='firstname' placeholder='Jane' required>
				</div>
			</div>
			<div class='form-group row'>
				<label for='lastname' class='col-sm-4 col-form-label'>Last Name</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='lastname' name='lastname' placeholder='Doe' required>
				</div>
			</div>
			<div class='form-group row'>
				<div class='col-sm-4'></div>
				<div class='col-sm-4'>
					<button class='btn btn-primary btn-block'>Search Author</button>
				</div>
				<div class='col-sm-4'></div>
			</div>
		</form>
		
		<form action='/authorfirst' method='GET'>
			<div class='form-group row'>
				<label for='firstname' class='col-sm-4 col-form-label'>First Name</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='firstname' name='firstname' placeholder='Jane' required>
				</div>
			</div>
		
			<div class='form-group row'>
				<div class='col-sm-4'></div>
				<div class='col-sm-4'>
					<button class='btn btn-primary btn-block'>Search Author by First Name</button>
				</div>
				<div class='col-sm-4'></div>
			</div>
		</form>
		
		<form action='/keyword' method='GET'>
			<div class='form-group row'>
				<label for='firstname' class='col-sm-4 col-form-label'>Keyword</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='keyword' name='keyword' placeholder='Keyword' required>
				</div>
			</div>
			<div class='form-group row'>
				<div class='col-sm-4'></div>
				<div class='col-sm-4'>
					<button class='btn btn-primary btn-block'>Search Quotes by Keyword</button>
				</div>
				<div class='col-sm-4'></div>
			</div>
		</form>
		
		<form action='/category' method='GET'>
			<div class='form-group row'>
				<label for='firstname' class='col-sm-4 col-form-label'>Category</label>
				<div class='col-sm-4'>
					<select name="category">
						<%catSet.forEach(function(q){%>
						<option value=<%=q%>><%=q%></option>
						<%});%>
					</select>
				</div>
			</div>
			<div class='form-group row'>
				<div class='col-sm-4'></div>
				<div class='col-sm-4'>
					<button class='btn btn-primary btn-block'>Search Quotes by Category</button>
				</div>
				<div class='col-sm-4'></div>
			</div>
		</form>
		
		<form action='/sex' method='GET'>
			<div class='form-group row'>
				<label for='firstname' class='col-sm-4 col-form-label'>Sex</label>
				<div class='col-sm-4'>
					<input type="radio" id="male" name="gender" value="M">
					<label for="male">Male</label><br>
					<input type="radio" id="female" name="gender" value="F">
					<label for="female">Female</label><br>
				</div>
			</div>
			<div class='form-group row'>
				<div class='col-sm-4'></div>
				<div class='col-sm-4'>
					<button class='btn btn-primary btn-block'>Search Quotes by Gender</button>
				</div>
				<div class='col-sm-4'></div>
			</div>
		</form>
		
	</div>
